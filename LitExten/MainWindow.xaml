<Window x:Class="WordExcelParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word to Excel Parser" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="LoadFilesButton" Content="Загрузить файлы" Click="LoadFilesButton_Click" Width="120"/>
            <Button x:Name="ExportButton" Content="Экспорт в Excel" Click="ExportButton_Click" Width="120" Margin="10,0,0,0" IsEnabled="False"/>
            <TextBlock x:Name="StatusText" Margin="10,0,0,0" Text="Выберите файлы..." VerticalAlignment="Center"/>
        </StackPanel>

        <ListBox x:Name="ResultListBox" Grid.Row="1" Margin="10" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

        <ProgressBar x:Name="ProgressBar" Grid.Row="2" Height="20" Margin="10" Visibility="Collapsed"/>
    </Grid>
</Window>